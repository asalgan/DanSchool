	<div class="container">
		<%= link_to root_url do %>
      <img src="/assets/logo.png" alt="" class="logo">
    <% end %>
    <i class="fa fa-twitter col-md-1 col-md-offset-4"></i>
    <nav class="footer-nav">
	    <ul>
	    	<li><%= link_to 'Blog', blog_url %></li>
	    	<li><%= link_to 'Feedback', '#' %></li>
	    </ul>
		</nav>
	</div>
</footer>



